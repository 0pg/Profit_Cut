<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="profitcut.votechain">

    <!-- Phone Number 얻기 권한 설정 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".VoteParticipationActivity" />
        <activity android:name=".VoteActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".VotingStateActivity" />
        <activity android:name=".CheckChainActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".MakeVoteActivity" />
        <activity android:name=".ParticipationPopUpActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar"></activity>
    </application>

</manifest>